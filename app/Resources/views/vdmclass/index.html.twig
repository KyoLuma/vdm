{% extends 'base.html.twig' %}


{% block body %}

    {% block header %}
        <nav class="navbar fixed-top navbar-light">
            <h1>VDM au camping</h1>
            <p class="sous_titre">(et vécues par un certain Sébastien de la WCS de Bleau...)</p>
            <a class="navbar-brand" href="#">Problèmes de dernières minutes</a>
            <a class="navbar-brand" href="#">Internet n'en fait qu'à sa tête</a>
            <a class="navbar-brand" href="#">Le trajet journalier</a>
            <a class="navbar-brand" href="#">Les p'tites bourdes</a>
            <a class="navbar-brand" href="#">Les Inclassables</a>
        </nav>
    {% endblock %}

    <div class="container div">

        {% for vdmClass in vdmClasses %}

            <div class="col-xs-offset-2 col-xs-8 add_vdm">
                <a href="{{ path('vdmclass_new') }}"> >>>>>"Ajoute une Galère à Sebastien"<<</a>
            </div>

            <div class="col-xs-offset-1 col-xs-11 content">

                        <div class="col-xs-offset-1 col-xs-19 text">
                            <a href="{{ path('vdmclass_show', { 'id': vdmClass.id }) }}">{{ vdmClass.id }}
                            </a>
                            {{ vdmClass.content }}
                        </div>

                        <div class="col-xs-offset-1 col-xs-3 date">Date :
                            {% if vdmClass.datePost %}{{ vdmClass.datePost|date('Y-m-d') }}{% endif %}
                        </div>
                            <div class="col-xs-offset-1 col-xs-4 cat">Catégorie :
                            {{ vdmClass.category }}
                            </div>
            </div>
                        <div class="content_btn">
                            <ul>
                                <li>
                                    <div class="col-xs-offset-5 col-xs-2 btn"><a href="{{ path('vdmclass_show', { 'id': vdmClass.id }) }}">Voir</a>
                                    </div>
                                </li>

                                <li>
                                    <div class="col-xs-offset-1 col-xs-2 btn"> <a href="{{ path('vdmclass_edit', { 'id': vdmClass.id }) }}">Edit</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                {% endfor %}


    </div>
    {% block footer %}
        <footer>
            <p class="sharing">Des aventures, ça se partage !</p>
            <a href="http://twitter.com/minimalmonkey" class="icon-button twitter"><i class="icon-twitter"></i><span></span></a>
            <a href="http://facebook.com" class="icon-button facebook"><i class="icon-facebook"></i><span></span></a>
            <a href="http://plus.google.com" class="icon-button google-plus"><i class="icon-google-plus"></i><span></span></a>
        </footer>
    {% endblock %}
{% endblock %}
