{% extends 'base.html.twig' %}

{% block body %}
    <h1></h1>
    <div class="container show">
        <div class="col-xs-offset-1 col-xs-1 id_show">N°
            {{ vdmClass.id }}
        </div>

            <div class="content_vdm">
                <p>Votre Vdm :</p>
                {{ vdmClass.content }}
            </div>

        <div class="col-xs-2 date_show">
               <p> Date :
                {% if vdmClass.datePost %}{{ vdmClass.datePost|date('Y-m-d') }}{% endif %}
               </p>
        </div>

            <div class="col-xs-2 cat_show">
            <p>Catégorie :
                {{ vdmClass.category }}
            </p>
            </div>



        <div class="col-xs-3 btn_return">
            <a href="{{ path('vdmclass_index') }}">Retour à la page d'Acceuil</a>
        </div>

            <div class="col-xs-2 edit">
            <a href="{{ path('vdmclass_edit', { 'id': vdmClass.id }) }}">Edition</a>
            </div>

                <div class="col-xs-2 delete">
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
                </div>

    </div>
{% endblock %}
