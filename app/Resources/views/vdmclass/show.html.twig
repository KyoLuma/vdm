{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vdmclass</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vdmClass.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ vdmClass.content }}</td>
            </tr>
            <tr>
                <th>Datepost</th>
                <td>{% if vdmClass.datePost %}{{ vdmClass.datePost|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ vdmClass.category }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vdmclass_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vdmclass_edit', { 'id': vdmClass.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
